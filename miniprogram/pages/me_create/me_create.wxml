  <text>\n</text>
  <van-field
    value="{{ realName }}"
    required
    icon="manager-o"
    label="真实姓名："
    placeholder="请输入真实姓名"
    bind:change="change1"
  />

  <text>\n</text>
  <picker mode="date"
          value="{{date}}"
          start="1900-01-01"
          end="2020-01-01"
          bindchange="bindDateChange">
      <van-field
        value="{{ date}}"
        label="出生日期："
        icon="records"
        placeholder="请选择您的生日"
        bind:change="change2"
      />
  </picker>


  <text>\n</text>
  <van-field
    value="{{ job }}"
    label="职业："
    placeholder="请输入职业"
    icon="flower-o"
    bind:change="change3"
  />


  <text>\n</text>
  <van-field
  custom-style="height:100px"  
    value="{{signature}}"
    border="{{a}}"
    label="个性签名："
    type="textarea"
    icon="peer-pay"
    placeholder="请输入个性签名"
    autosize
    bind:change="change4"
  />
<text>\n\n\n\n\n</text>


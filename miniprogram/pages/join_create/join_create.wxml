<van-cell-group>
    <van-field
      icon="eye-o"
   
      value="{{ teamName }}"
      required
      clearable
      label="团队名"
      icon="question-o"
      placeholder="请输入团队名"
      bind:change="change1"
      bind:click-icon="onClickIcon"
    />
  
    <van-field
      value="{{ leader }}"
      icon="user-o"
    
      label="创建人姓名"
      placeholder="请输入创建人姓名"
      bind:change="change2"
      required
      border="{{ false }}"
    />
    <van-field
    value="{{ password }}"
    type="txt"
    label=" "
    placeholder=" "
    
    border="{{ false }}"
  />
  <van-field
  value="{{ password }}"
  type="txt"
  label="描述"
  icon="flag-o"
  placeholder="请输入团队描述"

  border="{{ false }}"
/>
  </van-cell-group>

  <van-button 
  bind:click="createTeam"
  custom-class="create-btn"
  style="position:fixed;bottom:0;width:100%;"
  color="#ff9966" 
  icon="success"
  size="large"
  >创建团队</van-button>
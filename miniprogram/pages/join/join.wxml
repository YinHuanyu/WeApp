<view class="team-list">
  <view class="team-row"
    wx:for="{{teamList}}" wx:for-item="i">
    <view class="team-col" wx:for="{{i}}" wx:for-item="j" data-name="{{j.name}}">
      <view class="team-img"></view>

      <view class="team-text">
        <view class="team-title">
          {{j.name}}
        </view>
        <view class="team-content">
          {{j.leader}}
        </view>
      </view>
      <view class="joinIcon">
        <van-icon name="more-o"
          size="20px" 
          custom-class="join-btn"
          color="#888"
          bind:click="addMember"/>
      </view>
    </view>
    <van-icon name="more-o"
      size="20px" 
      custom-class="join-btn"
      color="#ff9966"
      bind:click="addTeam"/>
  </view>
</view>


  


<!--pages/join/join.wxml

初始页面，显示团队创建按钮和搜索功能

-->
<van-icon name="add" size="30px" bind:click="addTeam"/>

<van-search 
show-action
bind:change="onChange"
bind:search="onSearch"
bind:cancel="onCancel"
placeholder="请输入搜索的团队ID或名称" />
<van-icon name="comment-o" size="20px" bind:click="enterIndex"/>


<i-grid wx:for="{{teamList}}" wx:for-item="i">
    <i-grid-item 
    wx:for="{{i}}" wx:for-item="j"
    bindtap="chooseTeam"
    data-name="{{j.name}}">
    团队名称：{{j.name}}
    团队创建者：{{j.leader}}
    <van-button size="mini"
    bind:click="enterTeam"
    >加入</van-button>
    </i-grid-item>
</i-grid>


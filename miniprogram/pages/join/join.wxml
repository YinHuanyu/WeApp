<van-search 
show-action
custom-class="search"
bind:change="onChange"
bind:search="onSearch"
bind:cancel="onCancel"
placeholder="请输入搜索的团队ID或名称" />
<view class="banner"> 这里改一下样式 </view>
<view class="btn">
<van-icon name="add" 
  size="40px" 
  custom-class="join-btn"
  color="#ff9966"
  bind:click="addTeam"/>
</view>

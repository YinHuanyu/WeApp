<van-icon 
  name="add"
  size="40px"
  class="btn"
  bind:click="addTeam"
/>

<view class="team-list">
  <view class="team-col"
    wx:for="{{teamList}}" wx:for-item="j">
 
      <view class="team-img">
      <image src="{{j.pic}}"/></view>

      <view class="team-text">
        <view class="team-title">
          {{j.name}}
        </view>
        <view class="team-content">
          {{j.leader}}
        </view>
      </view>
      <view class="joinIcon">
        <van-icon name="more-o"
          size="20px" 
          custom-class="join-btn"
          color="#888"
          bind:click="showPopup"
        />

        <van-popup show="{{ show }}" 
          closeable
          close-icon-position="bottom-right"
          close-icon="close"
          position="bottom"
          duriton="{{100}}"
          custom-style="height: auto;"
          round
          bind:close="onClose">
          <van-row>
            <van-col span="8" 
            data-team="{{item}}"
            offset="2"
            custom-class="span-class"
            round="round"
            wx:for="{{myTeams}}"bindtap="enterTeam">{{item}}</van-col>
          </van-row>
        </van-popup>
        <!--
        <van-action-sheet
          show="{{ show }}"
          actions="{{ actions }}"
          bind:close="onClose"
          bind:select="onSelect"
          data-id="{{j._id}}"
          data-teamname="{{j.name}}"
        />
        -->
      </view>
  </view>
</view>



  


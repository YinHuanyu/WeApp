<van-icon 
name="add"
size="40px"
class="btn"
bind:click="addTeam"
/>
<view class="team-list">
  <view class="team-col"
    wx:for="{{teamList}}" wx:for-item="j">
 
      <view class="team-img">
      <image src="{{j.pic}}"/>
      </view>

      <view class="team-text">
        <view class="team-title">
          {{j.name}}
        </view>
        <view class="team-content">
          {{j.leader}}
        </view>
      </view>
      <view class="joinIcon">
        <van-icon name="more-o"
          size="20px" 
          custom-class="join-btn"
          color="#888"
          bind:click="addMember"/>
      </view>
  

  </view>
</view>



  


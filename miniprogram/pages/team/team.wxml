<!--pages/team/team.wxml

包括三个导航/子页面
1、团队足迹
2、团队建议→建议页面
3、团队信息->修改团队信息
默认当前页面为团队足迹

还没有增加添加动态的功能
还没有增加对足迹的排序

选择显示团队协议
-->

<view class="haibao">
  <swiper indicator-dots="{{indicatorDots}}"autoplay="{{autoplay}}"interval="{{interval}}"duration="{{duation}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
   <view class="parent">
        <image src="{{item}}"class="slide-image"style="width:100%">
        </image>
   </view>
      </swiper-item>
    </block>
  </swiper>
</view>




<van-tabbar fixed="{{false}}"
 bind:change="directTo">
    <van-tabbar-item 
    class="icon-2"
    icon="search">
        <text>建议</text>
    </van-tabbar-item>
    <van-tabbar-item 
    class="icon-3"
    icon="friends-o">
            <text>信息</text>
    </van-tabbar-item>
    
  </van-tabbar>
  <van-cell
   title="选择我的团队"
    custom-class="choose-cell"
  is-link
  arrow-direction="down"
   bind:click="showPopup" />

<van-popup show="{{ show }}" 
position="top"
  custom-style="height: auto;"
  round="true"
bind:close="onClose">


<van-row>
  <van-col span="8" 
  data-team="{{item}}"
  offset="2"
  custom-class="span-class"
  round="round"
  wx:for="{{myTeams}}"bindtap="enterTeam">{{item}}</van-col>
</van-row>
<van-row>
</van-row>

</van-popup>



<view wx:if="{{unchoose}}" class="page-team">
{{defaultTeamName}}
</view>
<view wx:else class="page-team">
{{currentTeamName}}
</view>


<view wx:for="{{history}}">
<i-card thumb="https://i.loli.net/2017/08/21/599a521472424.jpg">
    <view slot="content">{{item.details}}</view>
    <view slot="footer">{{item.title+"---"+item.when[0]+'-'+item.when[1]+'-'+item.when[2]}}</view>
</i-card>
</view>
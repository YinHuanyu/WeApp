  <text>\n</text>
  <van-field
    value="{{ peison.nickname }}"
    required
    clearable
    icon="manager-o"
    label="昵称："
    placeholder="请输入昵称"
    border="{{ false }}"
    bindinput="bindKeyInput"
    bind:change="onChange"
  />

  <text>\n</text>
  <picker mode="date"
          value="{{person.date}}"
          start="2000-01-01"
          end="2020-01-01"
          bindchange="bindDateChange">
    <van-field
      value="{{ person.date }}"
      label="出生日期："
      icon="records"
      placeholder="请选择您的生日"
      border="{{ false }}"
      bindinput="bindKeyInput"
      bind:change="onChange"
    />
  </picker>


  <text>\n</text>
  <van-field
    value="{{ value }}"
    label="职业："
    placeholder="请输入职业"
    icon="flower-o"
    border="{{ false }}"
    bindinput="bindKeyInput"
    bind:change="onChange"
  />


  <text>\n</text>
  <van-field
  custom-style="height:100px"  
    value="{{signature}}"
    border="{{a}}"
    label="个性签名："
    type="textarea"
    icon="peer-pay"
    placeholder="请输入个性签名"
    autosize
    border="{{ false }}"
  />
<text>\n\n\n\n\n</text>

